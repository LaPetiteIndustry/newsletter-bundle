<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="Lpi\NewsletterBundle\Entity\Customer" table="customers">
    <id name="id" type="integer">
        <generator strategy="AUTO" />
    </id>
    <field name="firstName" column="firstName" type="string" nullable="false" length="255"/>
    <field name="lastName" column="lastName" type="string" nullable="false" length="255"/>
    <field name="department" column="department" type="string" nullable="false" length="255"/>
    <field name="emailAddress" column="emailAddress" type="string" nullable="false" unique="true" length="255"/>


    <field name="updatedAt" column="updated_at" type="datetime"/>
    <field name="createdAt" column="created_at" type="datetime"/>

    <lifecycle-callbacks>
        <lifecycle-callback type="prePersist" method="prePersist"/>
        <lifecycle-callback type="preUpdate" method="preUpdate"/>
    </lifecycle-callbacks>
</entity>
</doctrine-mapping>
