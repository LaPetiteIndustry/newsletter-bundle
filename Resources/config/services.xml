<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mailjet_params" type="collection">
            <parameter key="key">%mailjet_key%</parameter>
            <parameter key="secret">%mailjet_secret%</parameter>
        </parameter>
        <parameter key="mailjet_list_id">%list_id%</parameter>
    </parameters>

    <services>
        

        <service id="lpi.newsletter.service.register_customer" class="Lpi\NewsletterBundle\Block\RegisterCustomer">
            <tag name="sonata.block" />
            <argument>lpi.newsletter.service.register_customer</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="router" />
        </service>

        <service id="lpi.mailjet_client" class="Lpi\NewsletterBundle\Integration\Client">
            <argument>%mailjet_params%</argument>
        </service>

        <service id="lpi.mailjet" class="Lpi\NewsletterBundle\Integration\Mailjet">
            <tag name="monolog.logger" channel="newsletter"/>
            <argument type="service" id="lpi.mailjet_client"/>
            <argument type="service" id="logger"/>
            <argument>%mailjet_list_id%</argument>
        </service>

        <service id="lpi.newsletter_logger" class="Symfony\Bridge\Monolog\Logger">
            <tag name="monolog.logger" channel="newsletter"/>
            <argument>lpi.newsletter_logger</argument>
            <argument type="service" id="monolog.handler.newsletter"/>
        </service>

        <service id="lpi.listener_newsletter_persist" class="Lpi\NewsletterBundle\Listener\CustomerListener">
            <tag name="doctrine.event_listener" event="postPersist"/>
            <tag name="monolog.logger" channel="newsletter"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="lpi.mailjet"/>
        </service>

        <service id="lpi.listener_newsletter_update" class="Lpi\NewsletterBundle\Listener\CustomerListener">
            <tag name="doctrine.event_listener" event="postUpdate"/>
            <tag name="monolog.logger" channel="newsletter"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="lpi.mailjet"/>
        </service>

    </services>

</container>
